<h3 class="text-center">Here are your results:</h3>
<div id="overflow-business">
  <% @businesses.in_groups_of(3, false).each do |company| %>
    <div class="row">
      <% company.each do |business| %>
        <div class="card col-md-4 col-sm-4">
          <%= image_tag(business['image_url'], alt: business['name'], class: 'business-img') %>
          <h4 class="card-title"><%= business['name'] %></h4>
          <p class="card-text"><%= business['location']['address1'] %>, <%= business['location']['city'] %>, <%= business['location']['state'] %></p>
          <%= link_to 'Let\'s go!', ubers_path(longitude: business['coordinates']['longitude'], latitude: business['coordinates']['latitude'], name: business['name']), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
